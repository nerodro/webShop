@model IEnumerable<WebShoping.Models.Product>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="block">
        тута админка
        <br />
        @Html.ActionLink("Добавить товар", "AddProduct", "Moder")
        <h3>Все продукты</h3>
        <table>
            <tr>
                <td>Название</td>
                <td>Цена</td>
                <td>Колличество</td>
                <td>Фото</td>
            </tr>
            @foreach (var Product in Model)
            {
        <tr>
            <td>@Product.NameProduct</td>
            <td>@Product.Price</td>
            <td>@Product.Count</td>
            <td>
                @if (Product.PhotoProduct != null)
                {
                    <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Product.PhotoProduct))" />
                }
            </td>

            <td>@Html.ActionLink("Рекадктировать товар", "EditProduct", "Moder", new { Id = Product.Id })</td>
            <td>@Html.ActionLink("Удалить товар товар", "DeleteProduct", "Moder", new { Id = Product.Id })</td>
        </tr>
            }
        </table>


    </div>
</body>
</html>